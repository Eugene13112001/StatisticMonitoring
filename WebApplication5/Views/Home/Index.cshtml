@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <style type="text/css">
        .loader {
            width: 100px;
            height: 100px;
            border-radius: 50%; /* Создаем круг с помощью border-radius */
            border: 5px solid #ccc;
            position: relative;
        }
        .progress-circle {
            position: relative;
            width: 150px;
            height: 150px;
            margin: 0 auto;
        }

        .progress-circle__wrapper {
            width: 100%;
            height: 100%;
            transform: rotate(-90deg);
            border-radius: 50%;
            overflow: hidden;
        }

        .progress-circle__fill {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #2196f3;
            transform-origin: center center;
            border-radius: 50%;
        }

        .progress-circle__mask {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #fff;
            transform: rotate(90deg);
            transform-origin: center center;
            border-radius: 50%;
        }

        .progress-circle__text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }

        .progress-circle__value {
            font-size: 24px;
            font-weight: bold;
            transform: rotate(90deg); 
            transform-origin: left center; 
        }
        .inputs {
            display: none;
            margin-bottom: 15px;
        }

        .button {
         
            margin-bottom: 10px;
        }

        .bordersBlock {
            display: none;
           
        }
        
        #message{
            color: red;
        }
        #error {
            color: red;
        }
        #error2 {
            color: red;
        }
        .graph-table {
            display: none;
            border-collapse: collapse;
        }

        .graph-table th, .graph-table td {
                padding: 8px;
                border: 1px solid #ddd;
            }

        .graph-table th {
                background-color: #ddd;
            }
        .loader-progress {
            position: absolute;
            top: 5px;
            left: 5px;
            width: 90px;
            height: 90px;
            border-radius: 50%;
            background-color: #2196f3; /* Цвет заливки для прогресса */
            transform: rotate(0deg); /* Начальный угол поворота */
            transform-origin: center center; /* Установка оси вращения */
            transition: transform 0.3s; /* Плавный переход для анимации */
        }
        #users-table th, #users-table td {
            padding: 8px;
            text-align: left;
         
        }
        #users-table tbody tr.white {
            background-color: white;
            color: black;
        }
        #users-table tbody tr.red {
            background-color: red;
            color: white;
        }
    </style>
    <title></title>
</head>
<body>
    

    <div class="main">
        <div class="progress-circle">
            <h2>Процессор</h2>

            <div>
                <span id="cpu" class="progress-circle__value"></span>
            </div>

        </div>
        <div class="progress-circle">
            <h2>Память</h2>

            <div>
                <span id="memo" class="progress-circle__value"></span>
            </div>

        </div>
        <div><h1 id="message"></h1></div>
        <div id="loginBlock">
            Введите период обновления в секундах:<br />
            <input required name="timeline" id="timeline" value="1" type="number" />
            <h1 id="error"></h1>
        </div>
        <h2>Графики</h2>
        <div>
            <button class="cpu-button">Текущий график CPU</button>
            <button class="memo-button">Текущий график памяти</button>

        </div>
        <div>
            <button class="cpu-oldbutton">Старые графики CPU</button>
            <button class="memo-oldbutton">Старые графики памяти</button>

        </div>
        <table id="users-table">
            <thead>

            </thead>
            <tbody></tbody>
        </table>
        <div class="bordersBlock">
            Введите левую границу в секундах:<br />
            <input required name="leftborder" id="leftborder" value="1" type="number" /><br />
            Введите правую границу в секундах:<br />
            <input required name="rightborder" id="rightborder" value="1" type="number" /><br />
            <button id="periodbutton">Применить</button>
            <h1 id="error2"></h1>
        </div>
        <div><canvas id="chart" width="400" height="300"></canvas></div>

    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
  
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <!--Ссылка на библиотеку SignalR -->
    <script src="~/Scripts/jquery.signalR-2.4.3.min.js"></script>
    <!--Ссылка на автоматически сгенерированный скрипт хаба SignalR -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/util.js"></script>
</body>
</html>